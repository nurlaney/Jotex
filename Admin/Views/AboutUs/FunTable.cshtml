@model IEnumerable<AboutCompanyFunFactViewModel>
@{
    ViewData["Title"] = "Faktlar";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="mb-2" style="display:flex; justify-content:space-between;">
        <div class="heading" style="display:inline-block">
            <h1 class="h3 text-gray-800">Faktlar</h1>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Logo</th>
                            <th>Rəqəmlər</th>
                            <th>ALt-başlığı</th>
                            <th class="text-center">
                                <span>
                                    <a asp-action="createfun" class="m-0 font-weight-bold btn btn-success">Yeni +</a>
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Vəziyyəti</th>
                            <th>Logo</th>
                            <th>Rəqəmlər</th>
                            <th>ALt-başlığı</th>
                            <th class="text-center">
                                <span>
                                    <a asp-action="createfun" class="m-0 font-weight-bold btn btn-success">Yeni +</a>
                                </span>
                            </th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.Status)
                                    {
                                        <span class="badge badge-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Passiv</span>
                                    }
                                </td>
                                <td>@item.Icon</td>
                                <td>@item.Numbs</td>
                                <td>@item.FFDescription</td>

                                <td class="d-flex justify-content-center">

                                    <a class="btn btn-info btn-circle btn-sm" asp-action="editfun" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>

                                    <a class="btn btn-danger btn-circle btn-sm ml-2 deleteitem" asp-action="deletefun" asp-route-id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

