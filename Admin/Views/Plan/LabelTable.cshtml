@model IEnumerable<LabelViewModel>
@{
    ViewData["Title"] = "Etiketlər";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Etiketlər</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Text</th>
                            <th>Vəziyyəti</th>
                            <th>Rəngi</th>
                            <th class="text-center">
                                <span>
                                    <a asp-action="createlabel" class="m-0 font-weight-bold btn btn-success">Yenisini əlavə et</a>
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Text</th>
                            <th>Vəziyyəti</th>
                            <th>Rəngi</th>
                            <th class="text-center">
                                <span>
                                    <a asp-action="createlabel" class="m-0 font-weight-bold btn btn-success">Yenisini əlavə et</a>
                                </span>
                            </th>
                        </tr>
                    </tfoot>
                    <tbody class="tbody">

                        @foreach (var item in Model)
                        {

                            <tr class="item">
                                <td>@item.Text</td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <span class="badge badge-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Passiv</span>
                                    }
                                </td>
                                <td>@item.Color</td>




                                <td class="d-flex justify-content-center">

                                    <a class="btn btn-info btn-circle btn-sm" asp-action="editlabel" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt"></i>
                                    </a>

                                    <a class="btn btn-danger btn-circle btn-sm ml-2 deleteitem" asp-action="deletelabel" asp-route-id="@item.Id">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>


                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
