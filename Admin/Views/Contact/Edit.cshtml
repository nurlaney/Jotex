@model ContactViewModel
@{
    ViewData["Title"] = "Əlaqə";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Əlaqə</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="radio" id="Status" value="true" name="Status" class="custom-control-input">
                        <label class="custom-control-label" for="Status">Aktiv</label>
                        <span class="field-validation-valid text-danger" asp-validation-for="Status"></span>

                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="StatusFal" value="false" name="Status" class="custom-control-input">
                        <label class="custom-control-label" for="StatusFal">Passiv</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Başlıq</label>
                    <input class="form-control form-control-user slug-source" asp-for="Title">
                    <span class="field-validation-valid text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Alt-başlıq</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Description"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormTitle">Form başlığı</label>
                    <input class="form-control form-control-user slug-source" asp-for="FormTitle" />
                    <span class="field-validation-valid text-danger" asp-validation-for="FormTitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormDescription">Form alt-başlığı</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="FormDescription"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="FormDescription"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormActionText">Button teksdi</label>
                    <input class="form-control form-control-user slug-source" asp-for="FormActionText" />
                    <span class="field-validation-valid text-danger" asp-validation-for="FormActionText"></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Əlavə et</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

