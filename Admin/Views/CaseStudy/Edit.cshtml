@model CaseStudyViewModel

@{
    ViewData["Title"] = "Yeni analiz";
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Yeni analiz</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Vəziyyəti</label>
                    <div class="custom-control custom-radio custom-control-inline ml-3">
                        <input type="radio" id="Status" value="true" name="Status" class="custom-control-input">
                        <label class="custom-control-label" for="Status">Aktiv</label>
                        <span class="field-validation-valid text-danger" asp-validation-for="Status"></span>

                    </div>
                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" id="StatusFal" value="false" name="Status" class="custom-control-input">
                        <label class="custom-control-label" for="StatusFal">Passiv</label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ServiceId">Servislər</label>
                    <select asp-for="ServiceId" class="form-control">
                        <option value="0" selected disabled>Seç</option>
                        @foreach (var item in ViewBag.Services)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="AgentId">Agentlər</label>
                    <select asp-for="AgentId" class="form-control">
                        <option value="0" selected disabled>Seç</option>
                        @foreach (var item in ViewBag.Agents)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Adı</label>
                    <input class="form-control form-control-user slug-source" asp-for="Name">
                    <span class="field-validation-valid text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title">Başlıq</label>
                    <input class="form-control form-control-user slug-source" asp-for="Title">
                    <span class="field-validation-valid text-danger" asp-validation-for="Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Alt-başlıq</label>
                    <input class="form-control form-control-user slug-source" asp-for="Description">
                    <span class="field-validation-valid text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text">Mətn</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Text"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Text"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Challenge">Problem</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Challenge"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Challenge"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Solution">Həlli</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Solution"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Solution"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Results">Nəticə</label>
                    <textarea class="form-control form-control-user slug-source" asp-for="Results"></textarea>
                    <span class="field-validation-valid text-danger" asp-validation-for="Results"></span>
                </div>

                <div class="form-group d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Əlavə et</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
@section Scripts{

    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
